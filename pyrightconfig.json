{
  "typeCheckingMode": "basic",
  "ignore": [
    "notebooks/*.ipynb"
  ],
  "exclude": [
    "notebooks/**/data",
    "notebooks/**/models",
    "notebooks/**/reports"
  ],
  "reportUnusedImport": "warning",
  "reportUnusedVariable": "warning",
  "reportAttributeAccessIssue": "warning",
  "include": [
    "src",
    "scripts"
  ],
  "pythonVersion": "3.12",
  "useLibraryCodeForTypes": true,
  "extraPaths": [
    "src"
  ],
  "reportMissingTypeStubs": "none"
}
